<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InvertedButton">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:background">@drawable/inverted_button_background</item>
    </style>

    <style name="IconButton">
        <item name="android:background">@drawable/icon_button_background</item>
        <item name="android:tint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="BackButton">
        <item name="android:background">@drawable/icon_back_button_background</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
        <item name="android:tint">@color/black</item>
    </style>

</resources>